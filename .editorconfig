root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.tf]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
